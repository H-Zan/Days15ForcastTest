    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_click"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#0000ffee"/>-->
        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:lines="1"
            android:text="今天"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_date_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="12/30"
            android:textSize="12dp"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/id_day_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="多云"
            />

        <ImageView
            android:id="@+id/id_day_icon_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/www1"/>

        <!--<com.admai.days15forcasttest.WeatherLineView-->
        <!--android:id="@+id/wea_line"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="200dp"-->
        <!--WeatherLineView:temperTextSize="12dp"-->
        <!--WeatherLineView:textDotDistance="10dp"-->
        <!--WeatherLineView:weaLineWidth="2dp"-->
        <!--WeatherLineView:weadotRadius="3dp"-->
        <!--WeatherLineView:weatextColor="@color/colorAccent"-->
        <!--/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            />

        <ImageView
            android:id="@+id/id_night_icon_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/www2"/>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/id_night_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="多云"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_wind_dura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="西北风"
            android:textSize="12dp"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_wind_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:lines="1"
            android:text="三级"
            android:textSize="12dp"
            />

        <TextView
            android:background="#b2ed58"
            android:textColor="@color/white"
            android:id="@+id/txt_aqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="轻度"
            android:textSize="12dp"
            />
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#0000ffee"/>-->

    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#0000ffee"/>

</LinearLayout>